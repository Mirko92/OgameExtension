{
  "manifest_version": 2,
  "name": "Ogame MP",
  "author": "Mirko",
  "version": "0.0.1",
  "description": "Ogame extension",
  "options_page": "options/options.html",
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background/background.js"
    ]
  },
  "page_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Ogame MP",    
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.ogame.gameforge.com/*"
      ],
      "css": [
        "content/styles.css"
      ],
      "js": [
        "content/content.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab"
  ]
}