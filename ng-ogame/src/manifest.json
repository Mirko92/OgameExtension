{
    "name": "Ogame MP",
    "version": "0.0.8",
    "description": "Ogame extension",
    "manifest_version": 2,
    "icons": {
        "16": "assets/images/get_started16.png",
        "32": "assets/images/get_started32.png",
        "48": "assets/images/get_started48.png",
        "128": "assets/images/get_started128.png"
    },
    "options_page": "option/index.html",
    "background": {
        "persistent": true,
        "scripts": [
            "assets/background/background.js"
        ]
    },
    "page_action": {
        "default_popup": "index.html",
        "default_title": "Ogame MP",
        "default_icon": {
            "16": "assets/images/get_started16.png",
            "32": "assets/images/get_started32.png",
            "48": "assets/images/get_started48.png",
            "128": "assets/images/get_started128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.ogame.gameforge.com/game/*"
            ],
            "css": [
                "assets/content/styles.css"
            ],
            "js": [
                "assets/content/content.js"
            ]
        }
    ],
    "externally_connectable": {
        "matches": [
            "https://*.ogame.gameforge.com/*"
        ]
    },
    "permissions": [
        "storage",
        "declarativeContent",
        "activeTab",
        "tabs"
    ]
}